package me.EaZy.client.modules.SpeedModes;

import me.EaZy.client.Category;
import me.EaZy.client.Module;
import me.EaZy.client.utils.MoveUtils;
import me.EaZy.client.utils.MovementUtil;
import net.minecraft.client.Minecraft;
import net.minecraft.client.gui.GuiMainMenu;
import net.minecraft.util.Timer;

public class GommeBHop extends Module {

	public static final int EaZy = 166;

	public GommeBHop() {
		super("GommeBHop", 0, "", Category.SPEED);
	}

	double strafetarget;

	double strafewfloat;

	private int speedTimer;

	@Override
	public void onDisable() {
		Minecraft.thePlayer.speedInAir = 0.02f;
		speedTimer = 0;
		Timer.timerSpeed = 1;
	}

	@Override
	public String getRenderName() {
		if (GuiMainMenu.ersterapril) {
			return "GammelHazenHüpfer";
		} else {
			return super.getRenderName();
		}
	}

	@Override
	public void onUpdate() {
		if (!isToggled()) {
			if (togglecmd) {
				setToggled(true);
				onEnable();
			}
			return;
		}
		if (isToggled() && !togglecmd) {
			setToggled(false);
			onDisable();
			return;
		}

		if (strafewfloat < strafetarget) {
			strafewfloat += 0.05;
		}

		if (strafewfloat > strafetarget) {
			strafewfloat -= 0.05;
		}

		if (MovementUtil.areWalkingKeysDown()) {

			if (!Minecraft.thePlayer.isCollidedHorizontally) {
				if (org.lwjgl.input.Keyboard.isKeyDown(Minecraft.gameSettings.keyBindLeft.getKeyCode())) {
					strafetarget = 0.2;
				} else if (org.lwjgl.input.Keyboard.isKeyDown(Minecraft.gameSettings.keyBindRight.getKeyCode())) {
					strafetarget = -0.2;
				} else {
					strafetarget = 0;
				}

				MoveUtils.toLft(strafewfloat);
			}

			if (Minecraft.thePlayer.onGround) {
				Minecraft.thePlayer.jump();
				Minecraft.thePlayer.motionY = 0.398;
				Minecraft.thePlayer.speedInAir = 0.0203F; // 0.02 legit

				speedTimer = 0;
			} else {
				if (Minecraft.thePlayer.isInWater()) {
					return;
				}
				float s = 0.02F;
				if (speedTimer == 1) {
					s = 0.0208F;
				} else if (speedTimer == 2) {
					s = 0.0208F;
				} else if (speedTimer == 3) {
					s = 0.0208F;
				} else if (speedTimer == 4) {
					s = 0.0208F;
				} else if (speedTimer == 5) {
					s = 0.0208F;
				} else if (speedTimer == 6) {
					s = 0.02F;
				} else if (speedTimer == 7) {
					s = 0.0208F;
				} else if (speedTimer == 8) {
				}

				speedTimer++;
				Minecraft.thePlayer.speedInAir = s;
				Timer.timerSpeed = 1F;

			}
		} else {
			Minecraft.thePlayer.motionX /= 1.5;
			Minecraft.thePlayer.motionZ /= 1.5;
		}
	}
}
